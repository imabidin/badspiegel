# WordPress Development Environment Configuration
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# === DATABASE CONFIG ===
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress_password
DB_ROOT_PASSWORD=root_password
DB_HOST=db
DB_PORT=3306

# === WORDPRESS CONFIG ===
WP_TITLE="WordPress Development"
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin123
WP_ADMIN_EMAIL=admin@localhost.dev
WP_URL=http://localhost

# === DEBUG SETTINGS ===
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true

# === REDIS CONFIG ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === PERFORMANCE ===
WP_MEMORY_LIMIT=512M
REDIS_MAXMEMORY=256mb

# === SSL CONFIG ===
SSL_ENABLED=false
SSL_DOMAIN=localhost

# === PORTS ===
HTTP_PORT=80
HTTPS_PORT=443
PHPMYADMIN_PORT=8080
PROXY_MANAGER_PORT=81
