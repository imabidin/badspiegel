# WordPress Development Environment .gitignore

# =============================================================================
# WordPress Core & Content
# =============================================================================
# WordPress Dateien (werden lokal generiert), außer Theme BSAWESOME
wordpress/*
!wordpress/wp-content/
wordpress/wp-content/*
!wordpress/wp-content/themes/
wordpress/wp-content/themes/*
!wordpress/wp-content/themes/bsawesome/

# =============================================================================
# BSAwesome Theme spezifische Dateien
# =============================================================================

# Theme Build-Ausgaben (JavaScript, CSS, Source Maps)
wordpress/wp-content/themes/bsawesome/dist/
!wordpress/wp-content/themes/bsawesome/dist/.gitkeep

# Excel-Konfigurationsdateien
wordpress/wp-content/themes/bsawesome/inc/configurator/*.xlsx
wordpress/wp-content/themes/bsawesome/inc/configurator/~$*.xlsx

# Package Lock Files
wordpress/wp-content/themes/bsawesome/package-lock.json

# =============================================================================
# Project Data & Backups
# =============================================================================
# Persistente Daten
data/
!data/.gitkeep

# Logs
logs/
!logs/.gitkeep

# Backups
backups/
!backups/.gitkeep

# Imports
kinsta/
!kinsta/.gitkeep
kinsta-import/
!kinsta-import/.gitkeep

# =============================================================================
# Build & Dependencies
# =============================================================================
# Build Ausgaben
dist/
!dist/.gitkeep

# Node.js
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# PHP Dependencies
vendor/
composer.lock

# =============================================================================
# Environment & Configuration
# =============================================================================
# Umgebungsvariablen
.env
.env.local
.env.production
.env.*.local

# Docker
.docker/

# SSL Zertifikate
*.pem
*.key
*.crt

# =============================================================================
# Temporary & Cache Files
# =============================================================================
# Temporäre Dateien
*.tmp
*.temp
*.log
*.bak

# Cache
.cache/
cache/

# =============================================================================
# Development Tools
# =============================================================================
# IDE/Editor Dateien
.idea/
.vscode/
*.swp
*.swo
*~

# OS Dateien
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
