# WordPress Development Environment .gitignore

# WordPress Dateien (werden lokal generiert), außer Theme BSAWESOME
wordpress/*
!wordpress/wp-content/
wordpress/wp-content/*
!wordpress/wp-content/themes
wordpress/wp-content/themes/*
!wordpress/wp-content/themes/bsawesome/
wordpress/wp-content/themes/bsawesome/dist/*

# Builds
# wordpress/wp-content/themes/bsawesome/dist/*
# wordpress/wp-content/themes/bsawesome/dist/js/configurator.js
# wordpress/wp-content/themes/bsawesome/dist/js/configurator.js.map

# BSAwesome Theme spezifische Dateien
# Node modules
# wordpress/wp-content/themes/bsawesome/node_modules/

# Excel-Dateien (Konfiguration)
# wordpress/wp-content/themes/bsawesome/inc/configurator/*.xlsx
# wordpress/wp-content/themes/bsawesome/inc/configurator/~$*.xlsx

# Andere temporäre Dateien
# wordpress/wp-content/themes/bsawesome/package-lock.json

# Persistente Daten
data/
!data/.gitkeep

# Logs
logs/
!logs/.gitkeep

# Backups
backups/
!backups/.gitkeep

# Imports
kinsta-import/
!kinsta-import/.gitkeep

# Build
dist/
!dist/.gitkeep

# Umgebungsvariablen (falls sensible Daten enthalten)
.env.local
.env.production

# Docker
.docker/

# Temporäre Dateien
*.tmp
*.temp
*.log

# IDE/Editor Dateien
.idea/
*.swp
*.swo
*~

# OS Dateien
.DS_Store
Thumbs.db
*.bak

# Node.js (falls für Theme-Development verwendet)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# PHP
vendor/
composer.lock

# SSL Zertifikate (falls lokal generiert)
*.pem
*.key
*.crt

# Cache Dateien
.cache/
cache/
